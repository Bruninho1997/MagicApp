<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/principal"
    tools:context="com.example.bruno.magicar.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="150px"
            android:layout_height="110px"
            android:text=""
            android:background="@drawable/iconetrocarfundo"
            android:onClick="MudarFundo"
            android:textSize="0.2in"
            android:typeface="serif"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="868px"
            android:layout_gravity="center"

            android:layout_marginTop="-0px"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:textColor="#ffffff"
                android:textSize="0.15in"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/quadrado"
                android:typeface="monospace"
                android:id="@+id/txtresposta"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="NÃ£o conte muito com isso!"/>

            <View
                android:layout_width="0px"
                android:layout_height="20px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:layout_width="350px"
                    android:layout_height="90px"
                    android:textColor="#ffffff"
                    android:background="@drawable/quadrado"
                    android:text="Limpar"
                    android:textSize="40px"
                    android:onClick="limpar"
                    android:typeface="monospace"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="15px"
                    android:layout_height="0px"/>

                <Button
                    android:layout_width="350px"
                    android:layout_height="90px"
                    android:textColor="#ffffff"
                    android:background="@drawable/quadrado"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:textSize="35px"
                    android:onClick="GerarResposta"
                    android:text="VER RESPOSTA"/>




            </LinearLayout>




        </LinearLayout>














    </LinearLayout>

</android.support.constraint.ConstraintLayout>
